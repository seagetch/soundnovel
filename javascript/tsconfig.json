{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonJS",
        "target": "es5",
        "lib": ["es6","dom"],
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types", 
            "src/scenario"
        ]
    },
    "include": [
        "./src/main/*.ts",
        "./src/main/scenario/*.ts", "./src/main/soundnovel.d.ts", "./src/main/soundnovel.ts"
    ],
    "exclude": ["node_modules"]
}
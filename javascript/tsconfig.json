{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonJS",
        "target": "es5",
        "lib": ["es2015", "es2015.iterable", "dom"],
        "declaration": true,
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots": [
            "node_modules/@types", 
            "scenario"
        ]
    },
    "include": [
        "./*",
        "ui/*",
        "scenario/**/*"
    ]
}